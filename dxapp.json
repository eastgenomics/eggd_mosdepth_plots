{
  "name": "eggd_mosdepth_plots",
  "title": "eggd_mosdepth_plots",
  "summary": "Generates coverage plots of .dist files output from mosdepth.",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "inputSpec": [
    {
      "name": "dist",
      "label": ".dist file(s)",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.dist*"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "dist_report",
      "label": "HTML coverage report",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/eggd_mosdepth_plots.sh",
    "version": "1"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x4"
        }
      }
    }
  }
}
